{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "@public/*": ["public/*"],
      "@models/*": ["src/models/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@helpers/*": ["src/utils/*"],
      "@store/*": ["src/store/*"],
      "@middlewares/*": ["src/store/middlewares/*"],
      "@actions/*": ["src/store/actions/*"],
      "@reducers/*": ["src/store/reducers/*"],
      "@interface/*": ["src/types/*"],
      "@containers/*": ["src/containers/*"]
    },
    "sourceMap": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": ["./src/**/*"]
}
